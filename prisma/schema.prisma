generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // For credential login
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  kiosks        Kiosk[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Kiosk {
  id        String   @id @default(cuid())
  name      String
  kioskId   String   @unique // Used for kiosk <-> server sync
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  config    KioskConfig?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model KioskConfig {
  id        String   @id @default(cuid())
  kioskId   String   @unique
  kiosk     Kiosk    @relation(fields: [kioskId], references: [id], onDelete: Cascade)
  
  // Location
  location  String?
  timezone  String?
  
  // Enabled tabs
  tabRadio    Boolean @default(true)
  tabSpotify  Boolean @default(true)
  tabWeather  Boolean @default(true)
  tabRecipes  Boolean @default(false)
  tabYoutube  Boolean @default(true)
  tabMixcloud Boolean @default(false)
  
  // Radio preferences (JSON array of station IDs)
  radioStations String? @db.Text
  
  // Service connections (encrypted tokens stored separately)
  spotifyConnected    Boolean @default(false)
  allrecipesConnected Boolean @default(false)
  youtubeConnected    Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
